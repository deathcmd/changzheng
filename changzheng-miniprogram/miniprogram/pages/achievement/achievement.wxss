/* pages/achievement/achievement.wxss */

.container {
  min-height: 100vh;
  background: #F5F5F5;
}

/* 统计头部 */
.stats-header {
  position: relative;
  padding-bottom: 40rpx;
}

.stats-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #FFB800, #FF9500);
}

.stats-content {
  position: relative;
  z-index: 1;
  padding: 60rpx 40rpx;
}

.stats-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.stats-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.stats-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
}

.stats-progress {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #F0F0F0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFB800, #FF9500);
  border-radius: 8rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #FF9500;
  font-weight: bold;
  white-space: nowrap;
}

/* 成就列表 */
.achievement-list {
  padding: 0 24rpx 40rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.achievement-item.locked {
  opacity: 0.7;
}

.achievement-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.achievement-icon.icon-unlocked {
  background: linear-gradient(135deg, #FFE082, #FFB800);
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.3);
}

.achievement-icon.icon-locked {
  background: #E0E0E0;
}

.icon-emoji {
  font-size: 48rpx;
}

.achievement-icon.icon-locked .icon-emoji {
  filter: grayscale(100%);
  opacity: 0.5;
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.achievement-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.achievement-item.locked .achievement-name {
  color: #999999;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666666;
}

.achievement-item.locked .achievement-desc {
  color: #CCCCCC;
}

.achievement-status {
  margin-left: 20rpx;
}

.status-unlocked {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.status-locked {
  font-size: 32rpx;
  opacity: 0.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载中 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999999;
}
