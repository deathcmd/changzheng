/* pages/profile/profile.wxss */

.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 40rpx 32rpx;
}

/* 头部 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-top: 12rpx;
  display: block;
}

/* 表单卡片 */
.form-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333333;
  width: 120rpx;
}

/* 头像设置 */
.avatar-item {
  flex-direction: column;
  align-items: center;
  padding: 48rpx 32rpx;
}

.avatar-item .form-label {
  width: 100%;
  text-align: center;
  margin-bottom: 24rpx;
}

.avatar-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn::after {
  display: none;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 4rpx solid #E8E8E8;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 24rpx;
  color: #999999;
}

.avatar-tip {
  font-size: 24rpx;
  color: #C41E3A;
  margin-top: 16rpx;
}

/* 输入框 */
.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  text-align: right;
}

.form-input::placeholder {
  color: #CCCCCC;
}

/* 提示信息 */
.tips {
  margin: 32rpx 0;
  padding: 0 16rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.8;
}

/* 按钮组 */
.btn-group {
  margin-top: 48rpx;
}

.btn-save {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  color: #FFFFFF;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  padding: 28rpx 0;
  margin-bottom: 24rpx;
}

.btn-save::after {
  display: none;
}

.btn-cancel {
  background: #FFFFFF;
  color: #666666;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  padding: 28rpx 0;
}

.btn-cancel::after {
  display: none;
}
