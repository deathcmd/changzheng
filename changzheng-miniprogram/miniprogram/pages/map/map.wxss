/* pages/map/map.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FDF5F5 0%, #F5F5F5 100%);
}

/* 视图切换Tab */
.view-tabs {
  display: flex;
  background: #FFFFFF;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #E8E8E8;
}

.view-tabs .tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.view-tabs .tab-item.active {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  color: #FFFFFF;
  font-weight: bold;
}

/* 地图容器 */
.map-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 100rpx);
}

.march-map {
  width: 100%;
  height: 100%;
}

/* 地图控件 */
.map-controls {
  position: absolute;
  right: 24rpx;
  top: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.control-btn {
  width: 72rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.control-btn text {
  font-size: 40rpx;
  color: #333333;
  font-weight: bold;
}

.control-btn image {
  width: 36rpx;
  height: 36rpx;
}

/* 进度卡片 */
.progress-card {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  right: 120rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.progress-card .progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-card .progress-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.progress-card .progress-value {
  font-size: 28rpx;
  color: #C41E3A;
  font-weight: bold;
}

.progress-card .progress-bar {
  height: 10rpx;
  background: #E8E8E8;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-card .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #C41E3A, #E8505B);
  border-radius: 5rpx;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
}

.progress-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-stats .stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #C41E3A;
}

.progress-stats .stat-label {
  font-size: 20rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 节点弹窗 */
.node-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.node-popup.show {
  display: flex;
}

.popup-content {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
}

.popup-header {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.popup-close {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
}

.popup-body {
  padding: 32rpx;
}

.popup-km {
  display: block;
  font-size: 26rpx;
  color: #C41E3A;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.popup-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.popup-footer {
  padding: 0 32rpx 32rpx;
}

.popup-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.popup-btn.primary {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  color: #FFFFFF;
}

.popup-btn.disabled {
  background: #E8E8E8;
  color: #999999;
}

/* 图例 */
.map-legend {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.legend-dot.unlocked {
  background: #52C41A;
}

.legend-dot.current {
  background: #FF9500;
}

.legend-dot.locked {
  background: #CCCCCC;
}

.legend-item text {
  font-size: 22rpx;
  color: #666666;
}

/* 顶部统计 */
.stats-header {
  position: relative;
  padding-bottom: 20rpx;
}

.stats-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #C41E3A, #E8505B);
}

.stats-content {
  position: relative;
  z-index: 1;
  padding: 40rpx;
}

.stats-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.stats-mileage {
  display: flex;
  align-items: baseline;
}

.mileage-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.mileage-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 8rpx;
}

.stats-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.stats-info {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #C41E3A;
}

.info-label {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 进度条 */
.progress-section {
  padding: 0 40rpx 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-start,
.progress-end {
  font-size: 22rpx;
  color: #666666;
}

.progress-percent {
  font-size: 24rpx;
  font-weight: bold;
  color: #C41E3A;
}

.progress-bar {
  height: 12rpx;
  background: #E8E8E8;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #C41E3A, #E8505B);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 节点列表 */
.node-list {
  flex: 1;
  height: calc(100vh - 420rpx);
}

.timeline {
  padding: 20rpx 32rpx 100rpx;
}

/* 时间线起点 */
.timeline-start,
.timeline-end {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.start-dot,
.end-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.start-dot {
  background: #C41E3A;
}

.end-dot {
  background: #52C41A;
}

.start-text,
.end-text {
  font-size: 26rpx;
  color: #666666;
}

/* 节点项 */
.node-item {
  display: flex;
  padding: 16rpx 0;
}

.node-timeline {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 64rpx;
  flex-shrink: 0;
}

.timeline-line {
  width: 4rpx;
  flex: 1;
  background: #E8E8E8;
}

.timeline-line.top {
  min-height: 20rpx;
}

.timeline-line.bottom {
  min-height: 20rpx;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #E8E8E8;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.timeline-dot.active {
  background: #C41E3A;
}

.timeline-dot image {
  width: 24rpx;
  height: 24rpx;
}

.node-item.current .timeline-dot {
  background: #FF9500;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.node-item.current .timeline-line {
  background: linear-gradient(180deg, #C41E3A, #E8E8E8);
}

.node-item.unlocked .timeline-line.top {
  background: #C41E3A;
}

/* 节点内容 */
.node-content {
  flex: 1;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-left: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.node-item.locked .node-content {
  opacity: 0.7;
}

.node-item.current .node-content {
  border: 2rpx solid #FF9500;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.2);
}

.node-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.node-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.node-km {
  font-size: 24rpx;
  color: #C41E3A;
  font-weight: bold;
}

.node-desc {
  font-size: 24rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.current-badge {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #FF9500, #FFBB00);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.lock-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.lock-info image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.lock-info text {
  font-size: 22rpx;
  color: #999999;
}

/* 定位按钮 */
.locate-btn {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 88rpx;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.locate-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 未登录遮罩 */
.login-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.login-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-card image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.login-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 32rpx;
}

.login-card .login-btn {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  color: #FFFFFF;
  padding: 20rpx 80rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
}
