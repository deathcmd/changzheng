/* pages/rank/rank.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #C41E3A 0%, #E8474A 150rpx, #F5F5F5 300rpx);
  display: flex;
  flex-direction: column;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  justify-content: center;
  padding: 30rpx 60rpx 20rpx;
  background: transparent;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #FFFFFF;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #FFFFFF;
  border-radius: 3rpx;
}

/* 年级标题 */
.grade-header {
  text-align: center;
  padding: 10rpx 0 20rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 排行榜列表 */
.rank-list {
  flex: 1;
  height: calc(100vh - 280rpx);
  background: #F5F5F5;
  border-radius: 32rpx 32rpx 0 0;
  padding-top: 20rpx;
}

/* 前三名 */
.top-three {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 40rpx 32rpx 30rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #F8F8F8 100%);
  margin: 0 24rpx 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.top-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  position: relative;
}

.top-item.first {
  margin: 0 10rpx;
  transform: translateY(-20rpx);
}

.top-item.second, .top-item.third {
  margin: 0 5rpx;
}

.crown {
  position: absolute;
  top: -50rpx;
  width: 70rpx;
  height: 70rpx;
}

.top-rank {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.top-item.first .top-rank {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  width: 56rpx;
  height: 56rpx;
  font-size: 30rpx;
}

.top-item.second .top-rank {
  background: linear-gradient(135deg, #C0C0C0, #A0A0A0);
}

.top-item.third .top-rank {
  background: linear-gradient(135deg, #CD7F32, #B87333);
}

.top-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.top-item.first .top-avatar {
  width: 130rpx;
  height: 130rpx;
  border: 6rpx solid #FFD700;
  box-shadow: 0 6rpx 24rpx rgba(255, 215, 0, 0.4);
}

.top-item.second .top-avatar {
  border-color: #C0C0C0;
}

.top-item.third .top-avatar {
  border-color: #CD7F32;
}

.top-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-top: 16rpx;
  max-width: 160rpx;
}

.top-major {
  font-size: 22rpx;
  color: #999999;
  margin-top: 6rpx;
  max-width: 180rpx;
}

.top-value {
  font-size: 28rpx;
  color: #C41E3A;
  font-weight: bold;
  margin-top: 10rpx;
}

.top-value text {
  font-size: 22rpx;
  font-weight: normal;
  color: #999;
}

/* 排名列表项 */
.rank-items {
  padding: 0 24rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.rank-item:active {
  transform: scale(0.98);
}

.item-rank {
  width: 56rpx;
  height: 56rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
}

.item-rank.top-rank-1 {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #FFFFFF;
}

.item-rank.top-rank-2 {
  background: linear-gradient(135deg, #C0C0C0, #A0A0A0);
  color: #FFFFFF;
}

.item-rank.top-rank-3 {
  background: linear-gradient(135deg, #CD7F32, #B87333);
  color: #FFFFFF;
}

.item-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin: 0 24rpx;
  border: 2rpx solid #F0F0F0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.item-extra {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}

.item-value {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.value-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #C41E3A;
}

.value-unit {
  font-size: 22rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 加载更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  background: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 24rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 28rpx;
  color: #999999;
}

/* 我的排名 */
.my-rank {
  background: #FFFFFF;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #E8E8E8;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.my-rank-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #FFF5F5, #FFFFFF);
  padding: 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #FFE0E0;
}

.my-rank-left {
  display: flex;
  align-items: center;
}

.my-rank-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #C41E3A;
  width: 80rpx;
  text-align: center;
}

.my-rank-num text {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.my-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin: 0 16rpx;
  border: 2rpx solid #FFE0E0;
}

.my-info {
  display: flex;
  flex-direction: column;
}

.my-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.my-extra {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.my-rank-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.my-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #C41E3A;
}

.my-unit {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 登录提示 */
.login-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  padding: 28rpx;
  border-top: 1rpx solid #E8E8E8;
  font-size: 28rpx;
  color: #C41E3A;
  font-weight: 500;
  padding-bottom: calc(28rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(28rpx + env(safe-area-inset-bottom));
}

.login-tip image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

/* 省略文本 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
