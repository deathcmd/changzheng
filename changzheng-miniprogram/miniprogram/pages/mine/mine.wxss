/* pages/mine/mine.wxss */

.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  padding-bottom: 20rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #C41E3A, #E8505B);
}

.user-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  overflow: hidden;
}

.avatar-wrapper .avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-wrapper.guest {
  background: rgba(255, 255, 255, 0.2);
}

.avatar-text {
  font-size: 56rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.user-id,
.user-class {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.user-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
}

.login-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.arrow-icon {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 数据统计 */
.stats-card {
  margin: -40rpx 24rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  position: relative;
  z-index: 2;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #C41E3A;
}

.stats-label {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8E8E8;
  align-self: center;
}

/* 功能菜单 */
.menu-card {
  margin: 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: #FFFFFF;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 44rpx;
  width: 48rpx;
  text-align: center;
}

.menu-title {
  flex: 1;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333333;
}

.menu-status {
  font-size: 24rpx;
  color: #52C41A;
  margin-right: 16rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.menu-status.success {
  background: #F6FFED;
  color: #52C41A;
}

.menu-status.warning {
  background: #FFF7E6;
  color: #FA8C16;
}

.menu-arrow {
  font-size: 36rpx;
  color: #CCCCCC;
}

/* 按钮样式重置 */
.contact-btn,
.share-btn {
  margin: 0;
  padding: 32rpx;
  line-height: normal;
  border: none;
  border-radius: 0;
  text-align: left;
}

.contact-btn::after,
.share-btn::after {
  display: none;
}

/* 退出登录 */
.logout-card {
  margin: 24rpx;
}

.logout-btn {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
}

.logout-btn text {
  font-size: 30rpx;
  color: #FF4D4F;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #CCCCCC;
}
