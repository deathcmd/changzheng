/* pages/bind/bind.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #C41E3A 0%, #E8505B 50%, #F5F5F5 50%);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 头部学院信息 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  color: #FFFFFF;
}

.school-logo {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.college-name {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 已绑定卡片 */
.bound-section {
  padding: 0 24rpx;
}

.bound-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.bound-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.bound-icon {
  font-size: 48rpx;
  margin-right: 12rpx;
}

.bound-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #52C41A;
}

.info-list {
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999999;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.unbind-btn {
  background: #FFFFFF;
  color: #999999;
  border: 2rpx solid #E0E0E0;
  border-radius: 44rpx;
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.bound-tip {
  text-align: center;
  padding: 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
}

.bound-tip text {
  font-size: 24rpx;
  color: #999999;
}

/* 表单区域 */
.form-section {
  padding: 0 24rpx;
}

.form-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.form-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-tips text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.8;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 96rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #CCCCCC;
}

.submit-btn {
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
}

/* 提示信息 */
.notice {
  display: flex;
  align-items: flex-start;
  margin: 32rpx 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.notice-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}
