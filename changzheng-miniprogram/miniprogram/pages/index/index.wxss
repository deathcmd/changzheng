/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 顶部头像区域 */
.header {
  position: relative;
  height: 320rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #C41E3A, #E8505B);
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  position: relative;
  z-index: 1;
  padding: 40rpx 40rpx 0;
}

/* 学院信息 */
.school-badge {
  text-align: center;
  margin-bottom: 24rpx;
}

.school-name {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

.user-section {
  display: flex;
  align-items: center;
}

.avatar-lg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: bold;
  overflow: hidden;
}

.avatar-lg .avatar-img {
  width: 100%;
  height: 100%;
}

.user-info {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.student-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.login-section {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 24rpx 48rpx;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 28rpx;
}

/* 数据卡片 */
.data-card {
  margin: -60rpx 24rpx 0;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.data-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
}

.data-label {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
}

.data-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8E8E8;
}

/* 同步状态 */
.sync-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx;
  padding: 24rpx 32rpx;
  background: #E8F5E9;
  border-radius: 16rpx;
}

.sync-status {
  display: flex;
  align-items: center;
}

.sync-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.sync-text {
  font-size: 26rpx;
  color: #4CAF50;
}

.sync-btn-small {
  background: #FFFFFF;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  font-size: 24rpx;
  line-height: 1.2;
}

/* 进度卡片 */
.progress-card {
  margin: 0 24rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.progress-detail {
  font-size: 24rpx;
  color: #C41E3A;
}

.node-info {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.node-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #FFF3E0;
}

.node-detail {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.node-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.node-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}

.node-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
}

/* 进度条 */
.progress-bar {
  height: 16rpx;
  background: #F0F0F0;
  border-radius: 8rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #C41E3A, #E8505B);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.next-node {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.next-label {
  color: #666666;
}

.next-distance {
  color: #C41E3A;
  font-weight: bold;
  margin-left: 8rpx;
}

/* 快捷入口 */
.quick-entry {
  margin: 0 24rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #FFF5F5;
  border-radius: 20rpx;
}

.entry-item text {
  font-size: 24rpx;
  color: #666666;
}

.rank-badge {
  position: absolute;
  top: -10rpx;
  right: -20rpx;
  background: #FF4D4F;
  color: #FFFFFF;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  white-space: nowrap;
}

/* 长征故事 */
.story-section {
  margin: 0 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.section-more {
  font-size: 24rpx;
  color: #999999;
}

.story-item {
  display: flex;
  align-items: center;
}

.story-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  background: #FFF3E0;
}

.story-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.story-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.story-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
